<table class='table table-condensed'>
  <thead>
  <tr>
    <th class='col-xs-1'>Title</th>
    <th class='col-xs-4'>URL</th>
    <th class='col-xs-5'>Description</th>
    <th colspan='2' class='col-xs-2'></th>
  </tr>
  </thead>

  <tbody>
  <% @links.each do |link| %>
    <tr>
      <td class='col-xs-1'><%= link_to link.title, link_path(link) %>&nbsp;&nbsp;</td>
      <td class='col-xs-4'><%= link.url %></td>
      <td class='col-xs-5'><%= link.description %></td>
      <td class='col-xs-1'><%= link_to 'Edit', edit_link_path(link) %></td>
      <td class='col-xs-1'><%= link_to 'Delete', link, :method => :delete, :data => { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
